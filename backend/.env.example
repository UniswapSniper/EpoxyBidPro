# ============================================================
# EpoxyBidPro — Backend Environment Variables
# Copy this file to .env and fill in real values.
# NEVER commit your actual .env file.
# ============================================================

# ─── Server ──────────────────────────────────────────────────
NODE_ENV=development
API_PORT=3000
API_BASE_URL=http://localhost:3000

# ─── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql://epoxy:epoxysecret@localhost:5432/epoxybidpro
POSTGRES_USER=epoxy
POSTGRES_PASSWORD=epoxysecret
POSTGRES_DB=epoxybidpro

# ─── Redis ───────────────────────────────────────────────────
REDIS_URL=redis://:redissecret@localhost:6379
REDIS_PASSWORD=redissecret

# ─── JWT ─────────────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_USE_STRONG_RANDOM_256BIT_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_ME_DIFFERENT_STRONG_RANDOM_SECRET
JWT_REFRESH_EXPIRES_IN=30d

# ─── Apple Sign In ───────────────────────────────────────────
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_SERVICE_ID=com.epoxybidpro.app
APPLE_KEY_ID=YOUR_APPLE_KEY_ID
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_APPLE_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# ─── OpenAI ──────────────────────────────────────────────────
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2048
OPENAI_DAILY_LIMIT_PER_USER=50

# ─── Stripe ──────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET

# ─── AWS ─────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_S3_BUCKET=epoxybidpro-media
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# ─── SendGrid (Email) ─────────────────────────────────────────
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@epoxybidpro.com
SENDGRID_FROM_NAME=EpoxyBidPro

# ─── Twilio (SMS) ─────────────────────────────────────────────
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# ─── Firebase Admin ──────────────────────────────────────────
FIREBASE_PROJECT_ID=epoxybidpro
FIREBASE_CLIENT_EMAIL=YOUR_FIREBASE_CLIENT_EMAIL
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# ─── Rate Limiting ───────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# ─── CORS ────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://epoxybidpro.com

# ─── Logging ─────────────────────────────────────────────────
LOG_LEVEL=debug
LOG_FORMAT=json
